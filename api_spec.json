{
  "info": {
    "name": "Algae Collection API",
    "description": "API for managing algae collection data and locations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Locations",
      "item": [
        {
          "name": "List Locations",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/locations/",
              "host": ["{{base_url}}"],
              "path": ["api", "locations", ""]
            },
            "description": "Get all locations with optional filtering"
          }
        },
        {
          "name": "Get Location by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/locations/:id/",
              "host": ["{{base_url}}"],
              "path": ["api", "locations", ":id", ""],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "Location ID"
                }
              ]
            }
          }
        },
        {
          "name": "Create Location",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/api/locations/",
              "host": ["{{base_url}}"],
              "path": ["api", "locations", ""]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Sample Location\",\n    \"description\": \"Description of the location\",\n    \"coordinates\": {\n        \"type\": \"Point\",\n        \"coordinates\": [77.5946, 8.0883]\n    }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Update Location",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{base_url}}/api/locations/:id/",
              "host": ["{{base_url}}"],
              "path": ["api", "locations", ":id", ""],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "Location ID"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Updated Location Name\",\n    \"description\": \"Updated description\",\n    \"coordinates\": {\n        \"type\": \"Point\",\n        \"coordinates\": [77.5946, 8.0883]\n    }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Delete Location",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api/locations/:id/",
              "host": ["{{base_url}}"],
              "path": ["api", "locations", ":id", ""],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "Location ID"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Algae",
      "item": [
        {
          "name": "List Algae",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/algae/",
              "host": ["{{base_url}}"],
              "path": ["api", "algae", ""],
              "query": [
                {
                  "key": "class_name",
                  "value": "Rhodophyceae",
                  "description": "Filter by class name"
                },
                {
                  "key": "order",
                  "value": "Nemaliales",
                  "description": "Filter by order"
                },
                {
                  "key": "family",
                  "value": "Sciniaceae",
                  "description": "Filter by family"
                },
                {
                  "key": "location_ids",
                  "value": "1,2,3",
                  "description": "Filter by location IDs (comma-separated)"
                },
                {
                  "key": "search",
                  "value": "Scinaia",
                  "description": "Search in scientific_name, common_name, description"
                }
              ]
            }
          }
        },
        {
          "name": "Get Algae by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/algae/:id/",
              "host": ["{{base_url}}"],
              "path": ["api", "algae", ":id", ""],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "Algae ID"
                }
              ]
            }
          }
        },
        {
          "name": "Create Algae",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/api/algae/",
              "host": ["{{base_url}}"],
              "path": ["api", "algae", ""]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"scientific_name\": \"Scinaia furcellata\",\n    \"class_name\": \"Rhodophyceae\",\n    \"order\": \"Nemaliales\",\n    \"family\": \"Sciniaceae\",\n    \"genus\": \"Scinia\",\n    \"species\": \"furcellata\",\n    \"location_ids\": [1, 2],\n    \"description\": \"Description of the algae\",\n    \"collection_date\": \"2025-01-01\",\n    \"collector\": \"Researcher Name\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Update Algae",
          "request": {
            "method": "PUT",
            "url": {
              "raw": "{{base_url}}/api/algae/:id/",
              "host": ["{{base_url}}"],
              "path": ["api", "algae", ":id", ""],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "Algae ID"
                }
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"scientific_name\": \"Updated Scientific Name\",\n    \"description\": \"Updated description\",\n    \"location_ids\": [1, 3]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Delete Algae",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api/algae/:id/",
              "host": ["{{base_url}}"],
              "path": ["api", "algae", ":id", ""],
              "variable": [
                {
                  "key": "id",
                  "value": "1",
                  "description": "Algae ID"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    }
  ]
} 